## lineparine orthography
##    Updated version based on ADLP機関誌
## added punctuation

% font_transcription => IPA {
@CASE_SENSITIVE;
vowel = "a" | "i" | "u" | "e" | "o" | "y"
palat = "X" | "x" | "ch" | "sh"
PUNCTUATION = "." | "," | "!" | "?" | "(" | ")" | "/" | "\"" | "<" | ">" | "―" | "[" | "]" | "…" | "=" | ":" | "─" | "─" | "~" | "^"
strong_vowel = "a" | "e" | "o"
pure_consonant = "p"  | "b"  | "t"  | "d"  | "k"  | "g"  | "z"  | "m"  | "n"  | "f"  | "v"  | "c"  | "s"  | "x"  | "h"   | "l"  | "r"  | "ts"  | "ch"  | "dz"  | "ng"  | "fh"  | "vh"  | "sh"  | "th"  | "dh"  | "kh" | "rkh" | "rl"  | "ph"

^ "-" -> /-/
"-" ^ -> /-/
"-" -> //

^ "edioll" ^ -> /edjol/
^ "wioll" ^ -> /wjol/
^ "woll" ^ -> /wol/
"vsfafgh" -> /vusfafuguh/
"simfgh" -> /zimfuguh/

"sh" -> /ʃ/

vowel "i" "j" vowel -> $ /j/ /j/ $
vowel "i" "j" ^ -> $ /j/ /i/

vowel "j" "i" strong_vowel -> $ /j/ /i/ $
^ "j" "i" strong_vowel -> /j/ /i/ $
strong_vowel "j" "i" "u" -> $ /j/ /i/ /w/

pure_consonant "i" "y" !("'i" | "'j" | "i" | "j") -> $ /i/ /ɥ/ 
pure_consonant "j" "j" !("'i" | "'j" | "i" | "j") -> $ /i/ /j/

("a" | "u" | "e" | "o" | "y") "y" ("i" | "j") vowel -> $ /ɥ/ /j/ $
"y" ("i" | "j") -> /y/ /j/

palat "i" vowel -> $ // $
strong_vowel ("i" | "y") "i" !vowel -> $ $ /i/
strong_vowel ("i" | "y") "'" "i" !vowel -> $ $ $ /i/
vowel "i" !"r" -> $ /j/
vowel "'" "i" !"r" -> $  $ /j/
palat "i" "u" -> $ $ /u/
strong_vowel "u" !"r" -> $ /w/
strong_vowel "'" "u" !"r" -> $ $ /w/

"ni" vowel -> /ɲ/ $;
"nj" vowel -> /ɲ/ $;
"i" vowel -> /j/ $

"s" "j" !vowel -> /z/ $;
"s" !vowel -> /s/
!vowel "j" !vowel -> /i/

vowel "y" !vowel -> $ /ɥ/
!vowel ("rkh" | "Rkh") -> /ʁ/
!vowel ("r" | "R") -> /r/
vowel "r" -> $ /ː/
"y" vowel -> /ɥ/ $




"tz" -> /t͡st͡s/;
"sx" -> /ʃʃ/;
"dX" -> /d͡ʑd͡ʑ/;
"en" ^ -> /ən/;

"ts" -> /t͡s/
"ch" -> /t͡ʃ/
"ng" -> /ŋ/

"th" -> /θ/
"dh" -> /ð/
"kh" -> /x/

"rl" -> /ɹ/
"Rl" -> /ɹ/

"ph" -> /p/



"a" -> /a/; "i" -> /i/; "u" -> /u/; "e" -> /e/; "o" -> /o/; "y" -> /y/

"p" -> /p/; "b" -> /b/; "t" -> /t/; "d" -> /d/; "k" -> /k/; "g" -> /g/;
"m" -> /m/; "n" -> /n/; "f" -> /f/; "v" -> /v/; 
"c" -> /s/; "z" -> /t͡s/;
"s" -> /z/ 
"x" -> /ʃ/
"h" -> /h/
"w" -> /w/
"j" -> /j/
"l" -> /l/
"q" -> /kw/

"'" -> //

"X" -> /d͡ʑ/
"F"  -> /ɸ/
"V"  -> /β/

# "l" !vowel -> /ʟ/
}

% postprocess {
	@Fallthru;
	"jy" -> /ju/
}

% normal_transcription => font_transcription {
@FALL_THROUGH;
	"fh" -> /F/
	"vh" -> /V/
	"dz" -> /X/
	# does not handle r, since it will be correctly handled in the next module
}

